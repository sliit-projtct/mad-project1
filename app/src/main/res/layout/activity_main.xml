<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dur"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="108dp"
        android:text="GOLDEN HOMES"
        android:textColor="#F3473FB5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="400dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.006">

        <LinearLayout
            android:layout_width="407dp"
            android:layout_height="180dp"
            android:layout_marginTop="7dp"

            android:layout_marginBottom="320dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="2dp">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="114dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="329dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/house11" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs/=50000"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />

                <Button
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:hint="Colombo"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="114dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="329dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/house1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="Rs/=20000"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />

                <Button
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:hint="Matara"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="114dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="329dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/house10" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="Rs/=10000"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />

                <Button
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:hint="Galle"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="114dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="329dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/house12" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs/=25000"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />

                <Button
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:hint="Kandy"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#F43636"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="43dp"
                    tools:layout_editor_absoluteY="388dp" />


            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="156dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:text="Your Dream...!!!"
        android:textColor="#0A0909"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/divider"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#3F51B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Want rent ? , Fill Me ....."
        android:textColor="#0A0909"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <EditText
        android:id="@+id/name"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/hNo"
        android:layout_width="353dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="House No"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <Button
        android:id="@+id/submit"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <Button
        android:id="@+id/back"
        android:layout_width="58dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="#FD554E4E"
        android:fontFamily="serif"
        android:text="Back"
        android:textColor="#F0FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update" />

    <Button
        android:id="@+id/next"
        android:layout_width="58dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="#FD554E4E"
        android:fontFamily="serif"
        android:text="Next"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/view1"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="VIEW"
        app:layout_constraintStart_toEndOf="@+id/submit"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <EditText
        android:id="@+id/rno"
        android:layout_width="192dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Reservation No"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit" />

    <Button
        android:id="@+id/update"
        android:layout_width="83dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text="UPDATE"
        app:layout_constraintStart_toEndOf="@+id/rno"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <Button
        android:id="@+id/delete"
        android:layout_width="83dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="DELETE"
        app:layout_constraintStart_toEndOf="@+id/update"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <Spinner
        android:id="@+id/city"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="186dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <Spinner
        android:id="@+id/duration"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="187dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hNo" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Desire City"
        app:layout_constraintStart_toEndOf="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Duration"
        app:layout_constraintStart_toEndOf="@+id/duration"
        app:layout_constraintTop_toBottomOf="@+id/hNo" />


</androidx.constraintlayout.widget.ConstraintLayout>